<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="add_table_managers" author="naumenko_sn">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="managers"/>
            </not>
        </preConditions>
        <createTable tableName="managers">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="text_under_image" type="varchar(255)"/>
            <column name="image_admin_id" type="uuid"/>
            <column name="home_page_id" type="uuid"/>
            <column name="version" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="copy_homepage_to_managers" author="naumenko_sn">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="managers"/>
        </preConditions>

        <sql>
            insert into managers (id, text_under_image, home_page_id, version)
            select
                gen_random_uuid(),
                hp.text_under_image,
                hp.id,
                hp.version
            from home_page hp
            where hp.title = 'Magic Volley';
        </sql>
        <rollback>
            <delete tableName="managers"/>
        </rollback>
    </changeSet>

</databaseChangeLog>